{
  "name": "desktop",
  "description": "Citronote",
  "version": "3.0.0",
  "main": "main.js",
  "author": {
    "name": "Korange and Citronote Project",
    "email": "hi@korange.work",
    "url": "https://korange.work/"
  },
  "scripts": {
    "dev:renderer": "cd ../app && npm run dev -- --mode electron",
    "build:main": "esbuild src/main.ts --bundle --platform=node --outfile=dist/main.js --external:electron --sourcemap",
    "build:preload": "esbuild src/preload.ts --bundle --platform=node --outfile=dist/preload.js --external:electron --sourcemap",
    "copy:assets": "cpy \"src/assets/**/*\" dist/assets",
    "build": "npm run build:main && npm run build:preload && npm run copy:assets",
    "watch:main": "esbuild src/main.ts --bundle --platform=node --outfile=dist/main.js --external:electron --sourcemap --watch",
    "watch:preload": "esbuild src/preload.ts --bundle --platform=node --outfile=dist/preload.js --external:electron --sourcemap --watch",
    "watch:assets": "cpy \"src/assets/**/*\" dist/assets --watch",
    "watch": "concurrently \"npm run watch:main\" \"npm run watch:preload\" \"npm run watch:assets\"",
    "start:electron": "wait-on http://localhost:5173 && nodemon --watch dist --exec \"electron ./dist/main.js\"",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run watch\" \"npm run start:electron\"",
    "app:dir": "electron-builder --dir",
    "app:dist": "pnpm run buildapp && pnpm run build && electron-builder",
    "buildapp": "cd ../app && npm run build -- --mode electron && cpy dist/** ../desktop/dist/app ",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "cpy": "^11.1.0",
    "cpy-cli": "^5.0.0",
    "electron": "^37.2.3",
    "esbuild": "^0.25.8",
    "nodemon": "^3.0.1",
    "typescript": "^5.8.3",
    "wait-on": "^7.0.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "core": "workspace:*",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^10.1.0"
  }
}
